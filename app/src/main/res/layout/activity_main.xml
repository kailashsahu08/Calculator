<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:text="0"
        android:textSize="40sp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@+id/answer" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answer"
        android:text="0"
        android:textSize="60sp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@+id/parent"
        android:layout_margin="30dp"/>

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingVertical="20dp"
        android:background="#DBDCDC">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:id="@+id/bac"
                android:background="@drawable/btnstyle"
                android:text="AC"
                android:textSize="25sp" />

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:id="@+id/bcl"
                android:background="@drawable/btnstyle"
                android:text="C"
                android:textSize="30sp" />

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:id="@+id/bprcnt"
                android:background="@drawable/btnstyle"
                android:text="%"
                android:textSize="34sp" />

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:id="@+id/badd"
                android:background="@drawable/btnstyle"
                android:text="+"
                android:textSize="34sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:background="@drawable/btnstyle"
                android:id="@+id/b7"
                android:text="7"
                android:textSize="34sp" />

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:id="@+id/b8"
                android:background="@drawable/btnstyle"
                android:text="8"
                android:textSize="34sp" />

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:id="@+id/b9"
                android:background="@drawable/btnstyle"
                android:text="9"
                android:textSize="34sp" />

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:id="@+id/bdiv"
                android:background="@drawable/btnstyle"
                android:text="/"
                android:textSize="34sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:id="@+id/b4"
                android:background="@drawable/btnstyle"
                android:text="4"
                android:textSize="34sp" />

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:id="@+id/b5"
                android:background="@drawable/btnstyle"
                android:text="5"
                android:textSize="34sp" />

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:id="@+id/b6"
                android:background="@drawable/btnstyle"
                android:text="6"
                android:textSize="34sp" />

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:id="@+id/bmul"
                android:background="@drawable/btnstyle"
                android:text="X"
                android:textSize="34sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:id="@+id/b1"
                android:background="@drawable/btnstyle"
                android:text="1"
                android:textSize="34sp" />

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:id="@+id/b2"
                android:background="@drawable/btnstyle"
                android:text="2"
                android:textSize="34sp" />

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:id="@+id/b3"
                android:background="@drawable/btnstyle"
                android:text="3"
                android:textSize="34sp" />

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:id="@+id/bsub"
                android:background="@drawable/btnstyle"
                android:text="-"
                android:textSize="34sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:id="@+id/b00"
                android:background="@drawable/btnstyle"
                android:text="00"
                android:textSize="28sp" />

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:id="@+id/b0"
                android:background="@drawable/btnstyle"
                android:text="0"
                android:textSize="34sp" />

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:id="@+id/bdot"
                android:background="@drawable/btnstyle"
                android:text="."
                android:textSize="40sp" />

            <Button
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:id="@+id/bequal"
                android:background="@drawable/btnstyle"
                android:text="="
                android:textSize="34sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>